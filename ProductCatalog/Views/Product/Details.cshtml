@model ProductCatalog.Core.Entities.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <h2 class="mb-4">Product Details</h2>
    <div class="card">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@Model.ImagePath" class="card-img" alt="@Model.Name" style="max-height:300px;object-fit:cover;">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text"><strong>Start Date:</strong> @Model.StartDate.ToString("yyyy-MM-dd")</p>
                    <p class="card-text"><strong>Duration:</strong> @Model.DurationInDays days</p>
                    <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
                    <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="AdminIndex" class="btn btn-secondary">Back</a>
                    }
                    else
                    {
                        <a asp-action="Index" class="btn btn-secondary">Back</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>