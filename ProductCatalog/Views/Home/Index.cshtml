@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron text-center mt-5">
    <h1 class="display-4">Welcome to the Product Catalog</h1>
    <p class="lead">Explore the latest products and available offers.</p>
    <hr class="my-4">
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Product" asp-action="AdminIndex" class="btn btn-primary">
            View Products 
        </a>
    }
    else
    {
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
            View Products
        </a>
    }
</div>